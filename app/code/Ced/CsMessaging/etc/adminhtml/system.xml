<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="ced_csmarketplace">
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1"
                   showInStore="0">
                <field id="messaging_active" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1"
                       showInStore="0">
                    <label>Enable Vendor Messaging</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="csmessaging" translate="label" type="text" sortOrder="50" showInDefault="1" showInWebsite="1"
                   showInStore="0">
                <label>Vendor Messaging</label>
                <field id="enable_messaging_forallproduct" translate="label" type="select" sortOrder="20"
                       showInDefault="1" showInWebsite="1" showInStore="0">
                    <label>Enable Messaging For All Product</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="enable_editor" translate="label" type="select" sortOrder="21" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Enable Wysiwyg Editor</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="admin_send_mail" translate="label" type="select" sortOrder="30" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Allow Admin To Send Email</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="vendor_send_mail" translate="label" type="select" sortOrder="40" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Allow Vendor To Send Email</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="customer_send_mail" translate="label" type="select" sortOrder="50" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Allow Customer To Send Email</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="customer_email_template" translate="label" type="select" sortOrder="60" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Customer Email Notification Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
                <field id="vendor_email_template" translate="label" type="select" sortOrder="70" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Vendor Email Notification Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>
                <field id="admin_email_template" translate="label" type="select" sortOrder="80" showInDefault="1"
                       showInWebsite="1" showInStore="0">
                    <label>Admin Email Notification Template</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Template</source_model>
                </field>

            </group>
        </section>
    </system>
</config>
